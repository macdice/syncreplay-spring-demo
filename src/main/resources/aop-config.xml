<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xmlns:aop = "http://www.springframework.org/schema/aop"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/aop
   http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">

  <bean id="transactionRetry" class="demo.TransactionRetryInterceptor"/>
  <bean id="transactionRoute" class="demo.TransactionRouteInterceptor"/>

  <aop:config>
    <!-- Find all methods annotated with @Transactional. -->
    <aop:pointcut id="allTransactionalMethods"
                  expression="execution(public * demo.KeyValueController.*(..))"/>

    <!-- Automatically retry transactions for certain errors. -->
    <aop:advisor pointcut-ref="allTransactionalMethods"
                 advice-ref="transactionRetry"
                 order="100"/>

    <!-- Automatically route transactions to readOnly annotation. -->
    <aop:advisor pointcut-ref="allTransactionalMethods"
                 advice-ref="transactionRoute"
                 order="200"/>
  </aop:config>
</beans>
